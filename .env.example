# Server Configuration
PORT=8080
DEBUG=False

# Database Configuration - PostgreSQL
# Option 1: Use DATABASE_URL (Railway auto-provides this)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Option 2: Use individual PostgreSQL variables (Railway style)
PGHOST=localhost
PGPORT=5432
PGUSER=inuka
PGPASSWORD=your_password
PGDATABASE=inuka_template_db

# Option 3: Traditional naming (legacy support)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=inuka
POSTGRES_PASSWORD=your_password
POSTGRES_DB=inuka_template_db

# SQLite (Alternative - used if no PostgreSQL config found)
SQLITE_DB_PATH=./sqlite.db

# JWT Configuration
JWT_SECRET=change-this-secret-in-production-environment
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OCR Configuration
TESSERACT_PATH=
TESSDATA_PATH=
OCR_LANGUAGES=eng

# Worker Pool
WORKER_POOL_SIZE=20
